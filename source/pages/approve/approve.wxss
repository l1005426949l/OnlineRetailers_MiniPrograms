/* pages/approve/approve.wxss */
page{
  background: #f2f2f2;
}
.prompt{
  margin: 10rpx 0 10rpx 40rpx;
  position: relative;
}
.prompt image{
  width: 28rpx;
  height: 28rpx;
}
.prompt text{
  font-size: 25rpx;
  margin: 10rpx;
  color: #CFCFCF;
  position: absolute; 
}
.information{
 padding: 10rpx 40rpx 0 40rpx;
  background: white;
}
input{
  border-bottom: 3rpx solid #CFCFCF;
  padding:30rpx 0;

}
.stepFalse{
   background: #cdcdcd;
   width: 90%;
   text-align: center;
   margin:70rpx auto;
   padding: 20rpx 0;
   border-radius: 5rpx; 
}
.stepFalse text{
  color: white;
  font-size: 30rpx;
}
.stepTrue{
   background: #cdcdcd;
   width: 90%;
   text-align: center;
   margin:70rpx auto;
   padding: 20rpx 0;
   border-radius: 5rpx; 
}
.stepTrue{
  background: #C1A675;
  font-size: 30rpx;
}