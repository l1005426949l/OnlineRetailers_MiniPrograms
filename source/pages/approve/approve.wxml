<!--pages/approve/approve.wxml-->
<view class="wrap">
 <view class='prompt'>
 <image src='/imga/aut_pro.png'></image>
 <text>请填写您的真实信息，通过后将不能修改</text>
 </view>
 <!--填写信息  -->
 <view class='information'>
   <input placeholder='真实姓名' bindchange="bindChangeName"/>
   <input placeholder='身份证号' bindchange="bindChangeIdCard" type="idcard"/>   
 </view>
 <!--下一步  -->
 <view class="{{isTrue ? 'stepTrue':'stepFalse'}}" catchtap='inoder'>
   <text style='color:white'>下一步</text>
 </view>
</view>
