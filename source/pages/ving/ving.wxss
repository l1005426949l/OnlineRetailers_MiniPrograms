/* pages/payment/payment.wxss */
page{
  background: #f2f2f2;
}
.await{
  background: #B49A69;
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  width: 100%;
}
.payment{
  display: flex;
  flex-direction: column;
  margin-left:-50rpx;

}
.payment text{
  padding: 10rpx;
}
.payment text:nth-child(1){
  color:white;
  font-size: 30rpx; 
}
.payment text:nth-child(2){
  color:white;
  font-size: 25rpx; 
}
.img image{
  width: 140rpx;
  height: 144rpx;
}
.icon{
  position: relative;
}
.icon image{
width: 32rpx;
height: 43rpx;
position: absolute;
margin:20px;
}
.address{
  background: white;
  padding:20rpx 0;

}
.details{
  position: relative;
}
.details text{
  font-size: 30rpx;
}
.details text:nth-child(1){
  margin-left: 100rpx;
  font-size: 30rpx;
}
.details text:nth-child(2){
  position: absolute;
  right: 40rpx;
  font-size: 30rpx;
}
.site{
  margin-left:109rpx;
font-size:30rpx;
margin:10rpx 60rpx 0 99rpx;

}
.introduce{
  background: white;
  margin-top:20rpx; 
  padding: 0 0 10rpx 0;
}
.goods{
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}
.goods text{
  font-size: 28rpx;
}
.goods image{
   width: 13rpx;
   height: 23rpx;
   margin-left: 30rpx;
}
.modity{
  border-top: 2rpx solid  #f2f2f2;
  border-bottom: 2rpx solid  #f2f2f2;
  padding: 20rpx;
}
.modity image{
  width: 200rpx;
  height: 200rpx;
   position: absolute;
}
.modity view:nth-child(2){
  font-size: 28rpx;
} 
.modity view:nth-child(3){
  font-size: 25rpx;
  color: #B2B2B2;
} 
.modity{
  position: relative;
}
.modity view{
 margin-left:180rpx;
}
.price{
  margin: 40rpx 0;
}
.price text:nth-child(1){
   color: #D54843;
   font-size:30rpx;
}
.price text:nth-child(2){
   color: #B2B2B2;
   font-size:25rpx;
   position: absolute;
   right: 40rpx;
}
.total{
  margin: 20rpx 40rpx;
  color: #898989;
  font-size: 20rpx;
  position: relative;
}
.total text:nth-child(2){
  position: absolute;
  right: 0;
}
.totals{
  margin: 20rpx 40rpx;
  font-size: 30rpx;
  position: relative;
  
}
.totals text:nth-child(2){
  position: absolute;
  right: 0;
  color: #D54843;
}
.number{
  margin-top: 20rpx;
  background: white;
  padding: 20rpx 40rpx;
}
.number view{
  font-size: 20rpx;
  color:#898989;
  padding: 5rpx 0; 
}
.welfares {
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10px 5px;
}

.welfares-good {
  margin: 0px auto;
  margin-bottom: 20px;
  position: relative;
  display: inline-block;
  font-size: 24rpx;
}

.welfares-image {
  width: 685rpx;
  height: 380rpx;
  display: inline-block;
  border: 1px #eee solid;
}

.welfares-good .product-name {
  color: #000;
  text-align: left;
  margin: 0px 5px;
  font-size: 14px;
}

.product-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-min {
  float: left;
  margin: 0px 5px;
  color: #ababab;
}

.product-price-wrap {
  margin-top: 16px;
  width: 100%;
}

.product-price-new {
  color: #fc606e;
  float: left;
  font-size: 18px;
  margin-left: 5px;
  font-weight: 900;
}

.product-price-old {
  color: #2e2e2f;
  float: left;
  font-size: 18px;
  padding-left: 2px;
}

.discount {
  position: absolute;
  right: 5px;
  color: #c1a675;
  width: 40px;
  font-size: 14px;
  text-align: center;
  height: 20px;
  border: 1px solid #c1a675;
}

.card {
  width: 90rpx;
  height: 30rpx;
  margin-top: 7px;
  float: left;
}
.mended{
  margin-top: 20rpx;
  text-align: center;
  background:white;
}
.mended text{
  font-size: 30rpx;
}
.mtop{
  background: white;
}
.cance{
 background: white;
 position: relative;
 width: 100%; 
}
.cancel{
  background: white;
  position: relative;
  width: 100%;
  height: 80rpx;

}
.cancel text{
  font-size: 25rpx;
  padding: 10rpx;
  position: absolute;

}
.cancel text:nth-child(1){
   border: 2rpx solid #000;
   right: 120rpx;
}
.cancel text:nth-child(2){
    border: 2rpx solid #D54843;
    right: 40rpx;

}