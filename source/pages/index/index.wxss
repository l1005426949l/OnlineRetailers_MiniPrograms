/**index.wxss**/

/*导航  */

page {
  height: 100%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.swiper-tab {
  width: 88%;
  text-align: center;
  top: 0;
  position: fixed;
  z-index: 111;
  height: 30px;
  background: white;
}

.swiper-tab-list {
  font-size: 33rpx;
  display: inline-block;
  width: 30px;
  color: #777;
  margin: 0  20px;
}

.c {
  position: fixed;
  right: 0;
  top: 0;
  width: 12%;
  height: 30px;
  background: white;

}
.down {
  width: 26rpx;
  height: 14rpx;
  /* padding: 0 15px 0 0; */
}

.on {
  color: #c1a675;
  padding: 3px 0;
  border-bottom: 5rpx solid #c1a675;
}

/*轮播图  */

.swiper-box {
  display: block;
  width: 100%;
  height: 100%;
  margin-top: 30px;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.swipers {
  width: 100%;
  height: 38%;
}

.slide-image {
  height: 414rpx;
  width: 100%;
}

/*新人专享  */

.exclusive {
  width: 100%;
  height: 297rpx;
}

.exclusive image {
  height: 297rpx;
  width: 100%;
}

/*精品推荐  */

.recommended {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.recommended text {
  margin-top: 3rpx;
  font-size: 10px;
  color: #ababab;
  word-spacing: 8px;
  letter-spacing: 2px;
}

/*商品列表  */

.welfares {
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10px 5px;
}

.welfares-good {
  margin: 0px auto;
  margin-bottom: 20px;
  position: relative;
  display: inline-block;
  font-size: 24rpx;
  width: 100%;
}

.welfares-image {
  width: 685rpx;
  height: 380rpx;
  display: inline-block;
  border: 1px #eee solid;
}

.welfares-good .product-name {
  color: #000;
  text-align: left;
  margin: 0px 5px;
  font-size: 14px;
}

.product-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-min {
  float: left;
  margin: 0px 5px;
  color: #ababab;
}

.product-price-wrap {
  margin-top: 2px;
  float: left;
  width: 100%;
}

.product-price-new {
  color: #fc606e;
  float: left;
  font-size: 18px;
  margin-left: 5px;
  font-weight: 900;
}

.product-price-old {
  color: #2e2e2f;
  float: left;
  font-size: 18px;
  padding-left: 2px;
}

.discount {
  position: absolute;
  right: 5px;
  color: #c1a675;
  width: 40px;
  font-size: 14px;
  height: 20px;
  border: 1px solid #c1a675;
}

.card {
  width: 90rpx;
  height: 30rpx;
  margin-top: 5px;
  float: left;
}


/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}